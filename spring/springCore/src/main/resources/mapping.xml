<?xml version="1.0" encoding="UTF-8"?>
<mapping>
    <class name="com.mtsmda.springCore.OXM.Computer">

        <map-to xml="computer" ns-uri="http://www.mtsmda.com" ns-prefix="mm"/>

        <field name="manufacturer" type="string">
            <bind-xml name="manufacturer" node="attribute"/>
        </field>

        <field name="volumeHDD" type="integer">
            <bind-xml name="volumeHDD" node="element"/>
        </field>

        <field name="gram" type="boolean">
            <bind-xml name="gram" node="element"/>
        </field>
    </class>
</mapping>